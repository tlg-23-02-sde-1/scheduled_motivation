include partials/header 
    link(rel="stylesheet", href="../styles/view_collections_stylesheet.css")
    include partials/navbar 

    h1 Testing
    
    
    #collections-container.d-flex.flex-column
        - var flushNum = 1
        .accordion.accordion-borderless#accordionFlushExampleX
            for collection in collections     
                .accordion-item 
                    h2.accordion-header(id=`flush-heading${flushNum}`)
                        button.accordion-button(type="button" data-mdb-toggle="collapse" data-mdb-target=`#flush-collapse${flushNum}` aria-expanded="false" aria-controls=`flush-collapse${flushNum}`).
                            #{collection.title}
                    .accoridon-collapse.collapse(id=`flush-collapse${flushNum}` aria-labelledby=`flush-heading${flushNum}` data-mdb-parent="#accordionFlushExampleX")
                        .accordion-body
                            h3 Title: 
                                input(type="text", name="", value=`${collection.title}`)
                            h3 Days:
                            p Monday
                                if collection.days.monday === true
                                    input(type="checkbox", name="monday" checked)
                                else 
                                    input(type="checkbox", name="monday")
                            p Tuesday
                                if collection.days.tuesday === true
                                    input(type="checkbox", name="tuesday" checked)
                                else 
                                    input(type="checkbox", name="tuesday")
                            p Wednesday
                                if collection.days.wednesday === true
                                    input(type="checkbox", name="wednesday" checked)
                                else 
                                    input(type="checkbox", name="wednesday")
                            p Thursday
                                if collection.days.thursday === true
                                    input(type="checkbox", name="thursday" checked)
                                else 
                                    input(type="checkbox", name="thursday")
                            p Friday
                                if collection.days.friday === true
                                    input(type="checkbox", name="friday" checked)
                                else 
                                    input(type="checkbox", name="friday")
                            p Saturday
                                if collection.days.saturday === true
                                    input(type="checkbox", name="saturday" checked)
                                else 
                                    input(type="checkbox", name="saturday")
                            p Sunday
                                if collection.days.sunday === true
                                    input(type="checkbox", name="sunday" checked)
                                else 
                                    input(type="checkbox", name="sunday")
                            h3 Times of Day: 
                            p Morning
                                if collection.time.morning === true 
                                    input(type="checkbox", name="morning" checked)
                                else 
                                    input(type="checkbox", name="morning")
                            p Afternoon
                                if collection.time.afternoon === true 
                                    input(type="checkbox", name="afternoon" checked)
                                else 
                                    input(type="checkbox", name="afternoon")
                            p Evening
                                if collection.time.evening === true 
                                    input(type="checkbox", name="evening" checked)
                                else 
                                    input(type="checkbox", name="evening")
                            button.btn.btn-success.btn-rounded Testing
                            
                - flushNum = flushNum + 1;
                
        hr
        a.btn.btn-info.btn-rounded(href="new_collection") Let's Make a new one!

    
        










    include partials/footer